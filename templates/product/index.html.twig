{% extends 'base.html.twig' %}

{% block title %}Nos produits
{% endblock %}

{% block body %}
	<h1 class="text-center my-5 text-4xl text-white">Nos produits</h1>
	<aside class="w-full md:w-64 float-left" aria-label="Sidebar">
		<div class="overflow-y-auto py-8 px-3 bg-gray-50">
			<ul class="space-y-4">
				<li>
					<h2 class="text-lg font-semibold text-gray-800 mb-4">Filtres</h2>
				</li>
				<li>
					<form action="#" method="GET">
						<div class="mb-4 flex flex-col">
							{{ form_label(form.string, 'Recherche', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
							{{ form_widget(form.string, {'attr': {'class': 'form-input w-full rounded-md shadow-sm'}}) }}
						</div>
						<div class="mb-4 flex flex-col sm:flex-row sm:space-x-4">
							<div class="w-full sm:w-1/2">
								{{ form_label(form.min, 'Prix Min', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
								{{ form_widget(form.min, {'attr': {'class': 'form-input w-full rounded-md shadow-sm'}}) }}
							</div>
							<div class="w-full sm:w-1/2">
								{{ form_label(form.max, 'Prix Max', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
								{{ form_widget(form.max, {'attr': {'class': 'form-input w-full rounded-md shadow-sm'}}) }}
							</div>
						</div>
						<div class="mb-4 flex flex-col">
							{{ form_label(form.categories, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
							{{ form_widget(form.categories, {'attr': {'class': 'form-multiselect w-full rounded-md shadow-sm'}}) }}
						</div>
						<div>
							{{ form_widget(form.submit, {'attr': {'class': 'inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-sm leading-tight uppercase rounded shadow-md hover:bg-blue-700 focus:bg-blue-700 focus:outline-none focus:ring-0 active:bg-blue-800 transition duration-150 ease-in-out'}}) }}
						</div>
					</form>
				</li>
			</ul>
		</div>

	</aside>


	<div class="wrappers-product">

		{% for product in products %}

			<div class="products-item">

				{% include "components/like.html.Twig" %}


				<img src="/uploads/{{product.illustration}}" class="object-cover" alt="{{product.name}}">
				<h2>{{product.name}}</h2>
				<p>
					<span class="text-white ">{{product.subtitle}}</span>

				</p>
				{# <p><span>{{product.description}}</span></p> #}
				<p>
					<small class="text-2xl text-white  ">{{(product.price /100)|number_format(2,",")}}€</small>

				</p>
				<div class="flex space-x-2 justify-center">

					<a href="{{ path('app_product', {slug:product.slug} )}}">
						<button class=" inline-flex items-center justify-left p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
							<span class="relative px-5 py-2.5 text-white transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
								voir l'article
							</span>
						</button>
					</a>
				</div>
			</div>
		{% endfor %}


	</div>
{% endblock %}
