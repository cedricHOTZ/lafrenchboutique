{% extends 'base.html.twig' %}

{% block title %}La French Boutique
{% endblock %}

{% block body %}

	{# {% include 'loader/loader.html.twig' %} #}


	<div class="max-w-full mx-auto">
		<div
			id="default-carousel" class="relative" data-carousel="static">
			<!-- Carousel wrapper -->
			<div class="overflow-hidden relative h-96 rounded-lg sm:h-80 xl:h-96 2xl:h-108" style="height: 40rem;">
				{% for key, sliders in slider %}
					<div class="hidden duration-700 ease-in-out" data-carousel-item>
						<span class="absolute top-1/2 left-1/2 text-2xl font-semibold text-white -translate-x-1/2 -translate-y-1/2 sm:text-3xl dark:text-gray-800">{{ sliders.title }}</span>
						<img
						src="/uploads/{{ sliders.illustration }}" title="{{ sliders.title }}" class="block absolute top-1/2 left-1/2 w-full -translate-x-1/2 -translate-y-1/2" alt="...">

						<!-- Ajout du titre, du contenu et du bouton -->
						<div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 text-center">
							<h5 class="text-4xl font-bold capitalize text-white">{{ sliders.title }}</h5>
							<p class="text-xl text-white">{{ sliders.content }}</p>
							<a href="{{ sliders.btnUrl }}">
								<button class="mt-2 inline-flex items-center justify-left p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
									<span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
										{{ sliders.btnTitle }}
									</span>
								</button>
							</a>
						</div>
					</div>
				{% endfor %}
			</div>
			<!-- Slider indicators -->
			<div class="flex absolute bottom-5 left-1/2 z-30 space-x-3 -translate-x-1/2">
				{% for key, sliders in slider %}
					<button type="button" class="w-3 h-3 rounded-full" aria-current="false" aria-label="Slide {{ key + 1 }}" data-carousel-slide-to="{{ key }}"></button>
				{% endfor %}
			</div>
			<!-- Slider controls -->
			<button type="button" class="flex absolute top-0 left-0 z-30 justify-center items-center px-4 h-full cursor-pointer group focus:outline-none" data-carousel-prev>
				<span class="inline-flex justify-center items-center w-8 h-8 rounded-full sm:w-10 sm:h-10 bg-white/30 text-black dark:text-gray-800">
					<svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
					<span class="hidden">Previous</span>
				</span>
			</button>

			<button type="button" class="flex absolute top-0 right-0 z-30 justify-center items-center px-4 h-full cursor-pointer group focus:outline-none" data-carousel-next>
				<span class="inline-flex justify-center items-center w-8 h-8 rounded-full sm:w-10 sm:h-10 bg-white/30 text-black dark:text-gray-800">
					<svg class="w-5 h-5 text-white sm:w-6 sm:h-6 dark:text-gray-800" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
					<span class="hidden">Next</span>
				</span>
			</button>
		</div>
	</div>


	<!-- section article -->

	<div class="container mx-auto mt-7 w-full">
		<h2 class="font-bold text-2xl text-white  ">Nos meilleures ventes</h2>

		<p class="mb-4 mt-2 font text-white">Découvrez les articles les plus vendus</p>


		<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">

			{% for product in isBest %}
				<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
					<a href="{{ path('app_product', {slug: product.slug}) }}">
						<img class="w-full h-56 object-contain rounded-t-lg" src="/uploads/{{ product.illustration }}" alt="">
					</a>
					<div class="p-6">
						<a href="{{ path('app_product', {slug: product.slug}) }}">
							<h5 class="mb-2 text-xl font-medium text-gray-900">{{ product.name }}</h5>
						</a>
						<p class="mb-3 text-gray-700">{{ product.subtitle }}</p>
						<p class="text-gray-600 text-xs">{{ (product.price / 100)|number_format(2, ",") }}€</p>
						<div class="mt-auto">
							<a href="{{ path('app_product', {slug: product.slug}) }}">
								<button class="inline-flex items-center justify-left p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-white rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
									<span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">Voir l'article</span>
								</button>
							</a>
						</div>

					</div>
				</div>
			{% endfor %}
		</div>
	</div>


	<!-- Container for demo purpose -->
	<div
		class="container my-24 px-6 mx-auto">

		<!-- Section: Design Block -->
		<section
			class="mb-32 text-gray-800">
			<!-- Jumbotron -->
			<div class="container mx-auto  text-center lg:text-left">
				{% for article in section1Home %}
					<div class="grid lg:grid-cols-2 flex items-center">
						<div>
							<img src="/uploads/{{article.illustration}}" class="w-full rounded-lg shadow-lg" alt=""/>
						</div>
						<div class="mb-12 lg:mb-0">
							<div class="block rounded-lg shadow-lg px-6 py-12 md:px-12 lg:-ml-14 sHome" style="background: white; backdrop-filter: blur(30px)">
								<h2 class="text-3xl font-bold mb-6">{{article.title}}</h2>
								<p class="text-gray-500 mb-6 pb-2 lg:pb-0">
									{{article.content|raw}}
								</p>
							</div>
						</div>


					</div>
				{% endfor %}
			</div>
			<!-- Jumbotron -->
		</section>
		<!-- Section: Design Block -->

	</div>

	<!-- Container for demo purpose -->
	<div
		class="container my-24 px-6 mx-auto">

		<!-- Section: Design Block -->
		<section
			class="mb-32 text-gray-800">
			<!-- Jumbotron -->
			<div class="container mx-auto  text-center lg:text-left">
				{% for article in sectionHome %}
					<div class="grid lg:grid-cols-2 flex items-center">
