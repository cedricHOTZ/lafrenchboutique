

{% block body %}
<!-- Container for demo purpose -->
<div class="container my-24 px-6 mx-auto">

  <!-- Section: Design Block -->
  <section class="mb-32 text-gray-800">
    <!-- Jumbotron -->
    <div class="container mx-auto xl:px-32 text-center lg:text-left">
    {% for article in section1Home %}
      <div class="grid lg:grid-cols-2 flex items-center">
       <div>
          <img src="/uploads/{{article.illustration}}" class="w-full rounded-lg shadow-lg"
            alt="" />
        </div>
        <div class="mb-12 lg:mb-0">
          <div class="block rounded-lg shadow-lg px-6 py-12 md:px-12 lg:-ml-14 sHome"
            style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px)">
            <h2 class="text-3xl font-bold mb-6">{{article.title}}</h2>
            <p class="text-gray-500 mb-6 pb-2 lg:pb-0">
            {{article.content|raw}}
            </p>
          </div>
        </div>

       
      </div>
       {% endfor %}
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->

</div>
<!-- Container for demo purpose -->




{% endblock %}


